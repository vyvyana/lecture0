doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        block title 
            title Google 
        link(rel="preconnect" href="https://fonts.googleapis.com")
        link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
        link(href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet")
        block stylesheet
            link(rel="stylesheet", href="./styles/app.css")
    body 
        .gg-top
            a.gg-item(href="/advanced.html") Advanced 
            a.gg-item(href="/image.html") Image
        .gg-content
            img.gg-logo(src="./images/gg.png", alt="logo-gg")
            .gg-search
                .gg-search-left
                    img.gg-icon-search(src="./images/icons/icon-search.svg", alt="icon-search")
                    form.form-home(action="https://www.google.com/search")
                        input.gg-search-input(type="text" name="q")
                        input.gg-search-button(type="submit" name="btnI" value="I'm Feeling Lucky" formaction="https://www.google.com/search?btnI=1")
                        input.gg-search-button(type="submit" value="Google Search")
                        
                .gg-search-right
                    img.gg-icon(src="./images/icons/icon-keyboard.svg", alt="keyboard")
                    img.gg-icon(src="./images/icons/icon-micro.svg", alt="micro")
                    img.gg-icon(src="./images/icons/icon-camera.svg", alt="camera")